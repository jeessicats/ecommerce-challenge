{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",                                  
    "lib": ["ES2016", "DOM"],                            
    "module": "ES6",
    "rootDir": "./scripts",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}